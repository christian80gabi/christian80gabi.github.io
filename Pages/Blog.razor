@page "/blog"
@using Markdig
@inject NavigationManager NavigationManager

<h1>Blog Posts</h1>

@foreach (var post in Posts)
{
    <h2 @onclick="@(() => NavigateToPost(post))">@post.Title</h2>
}

@code {
    private List<Post> Posts { get; set; } = GetPosts();

    static private List<Post> GetPosts()
    {
        return new List<Post>
        {
            new Post { Id = 1, Title = "Post 1", MarkdownFile = "post1.md" },
            new Post { Id = 2, Title = "Post 2", MarkdownFile = "post2.md" },
        };
    }

    private void NavigateToPost(Post post)
    {
        NavigationManager.NavigateTo($"/post/{post.Id}");
    }
}
